{
  "manifest_version": 2,

  "name": "Refresh",
  "description": "This extension refreshes tabs using right click menu.",
  "version": "1.0",

  "permissions": [
   "contextMenus",
   "tabs"
  ],
  "background": {
    "scripts": ["menu.js"]
  },
  "icons":{
    "64": "icon64.png",
  	"24": "icon24.png"
  }
}
